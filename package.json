{
  "name": "react-native-swipeable-actions",
  "version": "0.1.1",
  "description": "High-performance native swipeable row component for React Native using Expo Modules",
  "main": "src/index.ts",
  "types": "build/index.d.ts",
  "files": [
    "build",
    "src",
    "!src/__tests__",
    "!src/__mocks__",
    "ios",
    "!ios/Tests",
    "!ios/.build",
    "android/src/main",
    "android/build.gradle",
    "expo-module.config.json",
    "jestSetup.js"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "test:ios": "cd ios && swift test",
    "test:android": "cd example/android && ./gradlew :react-native-swipeable-actions:test --quiet",
    "test:all": "npm test && npm run test:ios && npm run test:android",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "typecheck": "tsc --noEmit",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "e2e": "cd e2e && npm run test",
    "e2e:android": "cd e2e && npm run test:android",
    "e2e:perf": "cd e2e && npm run test:perf"
  },
  "keywords": [
    "react-native",
    "expo",
    "swipeable",
    "gesture",
    "native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chocky335/react-native-swipeable-actions"
  },
  "homepage": "https://github.com/chocky335/react-native-swipeable-actions#readme",
  "bugs": {
    "url": "https://github.com/chocky335/react-native-swipeable-actions/issues"
  },
  "author": "chocky335",
  "license": "MIT",
  "peerDependencies": {
    "expo": ">=50.0.0",
    "expo-modules-core": ">=1.0.0",
    "react": ">=18.0.0",
    "react-native": ">=0.73.0"
  },
  "devDependencies": {
    "@testing-library/react-native": "^12.4.0",
    "@types/jest": "^29.5.0",
    "@types/react": "19.1.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "expo-modules-core": "^3.0.26",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "prettier-config-holepunch": "^2.0.0",
    "react": "19.1.1",
    "react-native": "0.82.1",
    "react-test-renderer": "19.1.1",
    "typescript": "^5.9.3"
  }
}
